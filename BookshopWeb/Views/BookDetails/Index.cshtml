@model IEnumerable<BookshopWeb.Models.BookDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminDashLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
